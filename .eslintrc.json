{
    "extends": ["airbnb-base", ".eslintrc-todo"],
    "env": {
      "mocha": true
    },
    "rules": {
      "comma-dangle": ["error", "only-multiline"],
      "max-len": ["error", {"code":120, "comments": 120}],
      "no-template-curly-in-string": "off",
      "no-plusplus": "off",
      "guard-for-in": "off",
      "prefer-destructuring": "off",
      "no-else-return": ["warn", {"allowElseIf": true}]
    }
}
